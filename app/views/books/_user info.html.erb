<div class="container">
  <div class="row">
    <div class='col-md-3'>
     <h1>User info</h1>
     <%= image_tag user. get_profile_image(100,100) %>
     <table class='table'>
       <tbody>
         <tr>
          <th>name</th>
          <%= user.name %>
         </tr>
         <tr>
          <th>introduction</th>
          <%= user.introduction %>
         </tr>
         <%= link_to "Edit", edit_user_path(user.id) %>
     </tbody>
    </table>
  </div>
    
  <h1>New book</h1>
    <%= form_with model: book, url: books_path(book.id), method: :post do |f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Opinion</h4>
        <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
  <% end %>
  </div>
</div>