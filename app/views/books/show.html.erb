<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'user info', user: @user, book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
    <h1>Book detail</h1>
    <%= image_tag @books.get_image %>
      <p><%= @books.title %></p>
      <p><%= @books.body %></p>
  
    <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@books.id) %>
    <%= link_to "Destroy", book_path(@books.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
    <% end %>
    </div>
  </div>
</div>