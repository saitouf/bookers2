<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'user info', user: @user, book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
    <h1>Book detail</h1>
      <table class='table'>
      <tbody>
        <tr>
          <td><%= @books.user.name %>
           <%= image_tag @books.get_image %></td>
          <td><%= @books.title %></td>
          <td><%= @books.body %></td>
        
          <% if @books.user == current_user %>
          <td><%= link_to "Edit", edit_book_path(@books.id), class: 'btn btn-outline-secondary btn-block edit_user_id' %></td>
          <td><%= link_to "Destroy", book_path(@books.id), method: :delete, "data-confirm" => "本当に消しますか？", class: 'btn btn-sm btn-dander destroy_book' %></td>
          <% end %>
        </tr>
      </tbody> 
      </table>
    </div>
  </div>
</div>