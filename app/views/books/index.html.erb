<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    <%= render 'user info', user: @user, book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
    <h1>Books</h1>
    <% @books.each do |book| %>
    <div>
      <%= image_tag book.get_image %>
      <h4>Title</h4>
      <%= link_to book_path(book.id) do %>
        <%= book.title %>
      <% end %>
      <h4>Opinion</h4>
        <%= book.body %>
    </div>
    <% end %>
    </div>
  </div>
</div>
