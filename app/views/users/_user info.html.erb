<h1>User info</h1>
<div>
  <%= image_tag user. get_profile_image(100,100) %>
  <h4>name</h4>
  <p><%= user.name %></p>
  <h4>introduction</h4>
  <p><%= user.introduction %></p>
  <p></p>
  <%= link_to "Edit", edit_user_path(user.id) %>
</div>
  
<h1>New book</h1>
  <%= form_with model: book, url: books_path(book.id), method: :post do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>